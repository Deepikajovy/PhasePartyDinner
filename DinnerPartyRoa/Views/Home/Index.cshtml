@model IEnumerable<DinnerPartyRoa.Models.MenuItem>


@{
    ViewBag.Title = "Home Page";
}

@Styles.Render("~/Content/css")





<div id="background">
    <h1>Welcome</h1>
    <p>
        Hi and welcome to our wonderful app we created to help with the end of phase parties. First off, if your a current student,
        Congratulations on finishing your current phase. Trust us, we know how hard it can be. If your a returning student then welcome back to DEV academy and we hope you enjoy your night.
    </p>
    <p>
        To use our application, just simply click on the menu item you wish to order below and then enter in your GitHub user name in form beside it.
        Don't worry if you do not have a GitHub username, simply ask your partner for theirs
    </p>

    <div id="menu"><h2>Menu:</h2></div>

    <div id="col1">

        <ul>
            @{
                int count = 0;
            }
            @foreach (var item in Model)
            {
                count++;

                <li class="li:@count menulist">               
                        <div class="left">@Html.DisplayFor(modelItem => item.Title)</div>
                        @if (item.Image != null)
                        {
                            <div class="right"><img src='@Url.Action("food", "images", new {id = item.Id})' /></div>
                        }
                </li>
            }

        </ul>
    </div>

    <div id="col2">
        <h2>Personal Details:</h2>
        <form>
            <p>Hi, your current order is:</p>
            <input id="currentorder" type="text" name="Item" value="Your Meal" readonly>
            <p>Please enter in your GitHub Username:</p>
            <input type="text" name="User" id="name" style="color: black;">
            <button id="submitbutton "type="submit">Submit Order</button>
        </form>

    </div>
</div>




